<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

<TextView android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/label_number"></TextView>
	<EditText android:id="@+id/NumberInput" 
		android:layout_height="wrap_content"
		android:layout_width="fill_parent" 
		android:inputType="number"></EditText>
	<TextView android:id="@+id/TextView02" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/label_string"></TextView>
	<EditText android:id="@+id/StringInput" 
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"></EditText>
	<TextView android:id="@+id/TextView03" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/label_search"></TextView>
	<EditText android:id="@+id/SearchInput" 
		android:layout_height="wrap_content"
		android:layout_width="fill_parent" 
		android:imeOptions="actionSearch"></EditText>

</LinearLayout>
